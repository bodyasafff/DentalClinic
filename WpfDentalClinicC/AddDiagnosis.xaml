<Window x:Class="WpfDentalClinicC.AddDiagnosis"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDentalClinicC"
        mc:Ignorable="d"
        Title="AddDiagnosis" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="Diagnosis" FontSize="25"></TextBlock>
            <TextBox x:Name="txt_NameDiagnosis" FontSize="25"></TextBox>
            <TextBlock Text="Description" FontSize="25"></TextBlock>
            <TextBox x:Name="txt_Description" FontSize="25"></TextBox>
            
        </StackPanel>
        <Button VerticalAlignment="Bottom" Content="Add" FontSize="25" Click="btn_AddDiagnosisClick"></Button>
    </Grid>
</Window>
